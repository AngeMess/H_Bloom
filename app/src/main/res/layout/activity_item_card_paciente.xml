<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/cardViewPacientes"
    android:layout_margin="16dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="2dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtNombrePaciente"
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:text="TEXT"
            android:textSize="28sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgEditarPaciente"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:srcCompat="@drawable/vector_asset_edit"/>


            <ImageView
                android:id="@+id/imgEliminarPaciente"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:srcCompat="@drawable/vector_asset_delete"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>